@model Gestion_de_films.Models.Room

@if(Model!=null){
    ViewData["Title"] = "Delete-"+Model.Name;

    <link rel="stylesheet" href="/css/Moviedetails.css" />
    <style>
        .container {
            text-align: center;
        }

        .row {
            display: inline-block;
            text-align: left;
            width: 50%;
            background-color: black;
            border-radius: 10px;
            padding: 1%;
        }
    </style>

    <br />
    <h1>@Model.Name</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        
        <hr />
            <div class="container">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NbPlaces)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NbPlaces)
                </dd>
            </dl>
        </div>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="RoomID" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a class="btn btn-outline-light" asp-action="Index">Back to List</a>
        </form>
    </div>
}else{
    <br />
    <h1>No Room Selected ! </h1>
}